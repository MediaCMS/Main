<nav class="">
    <div class="header">
        <a class="logo" href="#menu" data-bs-toggle="offcanvas"
            title="Меню сайта" role="button" aria-controls="menu">
            <img src="/logo.png" alt=<%= name %> title="<%= name %>" width="auto" />
        </a>
        <%#  
        <a class="button" data-bs-toggle="offcanvas" title="Меню сайта"
            href="#menu" role="button" aria-controls="menu">
        </a>
        #%>
    </div>
    <div id="menu" class="offcanvas offcanvas-start menu"
        aria-labelledby="menuLabel" tabindex="-1">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="contentMenuLabel">Меню сайта</h5>
            <button type="button" class="btn-close text-reset"
            data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="list-group">
                <% categories.forEach(category => { %>
                    <a href="/katehoriyi/<%= category.slug %>"
                        class="list-group-item<%=
                            (path === ('/katehoriyi/' + category.slug)) ? ' active' : '' %>
                        ">
                        <%= category.title %>
                    </a>
                <% })%>
                <hr />
                <% menu.forEach(item => { %>
                    <a href="<%= item.url %>" title="<%= item.description %>" 
                        class="list-group-item<%= (
                            ((item.url.length > 1) && path.includes(item.url))
                            || (path === item.url)) ? ' active' : '' %>">
                        <%= item.title %>
                    </a>
                <% }) %>
            </div>
        </div>
        <div class="offcanvas-footer">
            <form action="/poshuk" method="GET" class="d-flex" id="search">
                <input type="search" name="запит" placeholder="Пошук ..."
                    class="form-control me-2" />
            </form>
        </div>
    </div>
