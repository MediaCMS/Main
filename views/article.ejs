<article>
    <% if (image?.url) { %>
        <div class="main" data-image="<%= images.host %>/<%= image.url %>">
            <div class="text">
                <% if (typeof category !== 'undefined') {%>
                    <div class="category"><%= category.title %></div>
                <% } %>
                <h1><%= title %></h1>
                <% if (typeof user !== 'undefined') {%>
                    <div class="user"><%= user.title %></div>
                <% } %>
                <% if (typeof date !== 'undefined') {%>
                    <div class="date">
                        <%= date.getDate() %>
                        /<%= (date.getMonth() + 1).toString().padStart(2, '0') %>
                        /<%= date.getFullYear() %>
                    </div>
                <% } %>
            </div>
            <div class="image">
                <% if (image?.source) {%>
                    <div class="source"></div>
                <% } %>
                <% if (image?.author) {%>
                    <div class="author"></div>
                <% } %>
                </div>
        </div>
    <% } %>
    <% if (message) {%>
        <div class="box alert alert-danger"><%= message %></div>
    <% } %>
    <% if (typeof blocks !== 'undefined') {%>
        <% blocks.forEach(block => { %>
            <% switch (block.type) {
                case 'header': %>
                    <h2><%- block.text %></h2>
                <% break; %>
                <% case 'text': %>
                    <p><%- block.text %></p>
                <% break; %>
                <% case 'image': { %>
                    <figure title="<%= block?.title %>">
                        <div class="image" data-size="<%= block?.size %>">
                            <% if (Array.isArray(block?.url)) {
                                var carouselID = 'carousel' + block.id %>
                                <div id="<%= carouselID %>" class="carousel slide" data-bs-interval="0">
                                    <div class="carousel-indicators">
                                        <% block.url.forEach((url, index) => {%>
                                            <button type="button" class="<%= index === 0 ? 'active' : '' %>"
                                                data-bs-target="#<%= carouselID %>" data-bs-slide-to="<%= index %>"
                                                aria-current="true" aria-label="Slide <%= index + 1 %>">
                                            </button>
                                        <% }) %>
                                    </div>
                                    <div class="carousel-inner">
                                        <% block.url.forEach((url, index) => {%>
                                            <div class="carousel-item<%= index === 0 ? ' active' : '' %>">
                                                <img src="<%= images.host %>/<%= url %>?width=320" class="d-block w-100" alt="<%= block?.title %>">
                                            </div>
                                        <% }) %>
                                    </div>
                                    <button type="button" class="carousel-control-prev"
                                        data-bs-target="#<%= carouselID %>" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Попередній</span>
                                    </button>
                                    <button type="button" class="carousel-control-next"
                                        data-bs-target="#<%= carouselID %>" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Наступний</span>
                                    </button>
                                </div>
                            <% } else {%>
                                <img src="<%= images.host %>/<%= block.url %>?width=320" alt="<%= block?.title %>" />
                            <% } %>
                            <% if (block?.source || block?.author) { %>
                                <div class="copyright">
                                    <% if (block?.source) { %>
                                        <div class="source" title="<%= block?.source %>"><%= block.source %></div>
                                    <% } %>
                                    <% if (block?.author) { %>
                                        <div class="author" title="<%= block?.author %>"><%= block.author %></div>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>
                        <% if (block?.title) %><figcaption><%= block?.title %></figcaption>
                    </figure>
                <% } break; %>
                <% case 'video': %>
                    <iframe src="https://www.youtube.com/embed/<%= block?.url %>"
                        allow="accelerometer; autoplay; clipboard-write;
                        encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen="true" class="video"
                        data-size="<%= block?.size %>"
                        <% if (block?.ratio) { %> data-ratio="<%= block.ratio %>"<% } %>>
                    </iframe>
                <% break; %>
                <% case 'facebook': %>
                    <% const facebookSource = 'https://www.facebook.com/plugins/post.php'
                        + '?href=' + block?.url
                        + '&show_text=' + (block?.showText ? 'true' : 'false')
                        + '&width=' + block?.width.toString() %>
                    <iframe src="<%= facebookSource %>" className="facebook"
                        width="<%= block.width %>" height="<%= block.height %>" allowfullscreen="true"
                        allow="autoplay;clipboard-write;encrypted-media;picture-in-picture;web-share">
                    </iframe>
                <% break; %>
                <% case 'twitter': %>
                    <% const twitterSource = 'https://platform.twitter.com/embed/Tweet.html'
                        + '?dnt=false&embedId=twitter-widget-0&frame=false'
                        + '&hideCard=false&hideThread=false&id=' + block.url
                        + '&lang=en&origin=https%3A%2F%2Fpublish.twitter.com%2F%23'
                        + '&sessionId=b25822f74af35addadf583c4f8205ac3bae9cece'
                        + '&theme=light&widgetsVersion=2615f7e52b7e0%3A1702314776716' %>
                    <iframe src="<%= twitterSource %>" class="twitter" data-size="<%= block?.size %>"
                        allowtransparency="true" allowfullscreen="true">
                    </iframe>
                <% break; %>
                <% case 'list': %>
                    <ul data-size="<%= block?.size %>"><%- block.text %></ul>
                <% break; %>
                <% case 'table': %>
                    <%- block.text %>
                <% break; %>
                <% case 'quote': %>
                    <blockquote cite="<%= block?.link ?? '' %>" data-size="<%= block?.size %>">
                        <p><%= block?.text %></p>
                        <% if (block?.name) { %>
                            <footer>— <%= block.name %>
                                <% if (block?.work) %>, <cite><%= block?.work %></cite>
                            </footer>
                        <% } %>
                    </blockquote>
                    <%- block.quote %>
                <% break; %>
                <% case 'address': %>
                    <address><%- block.text %></address>
                <% break; %>
                <% case 'raw': %>
                    <pre><%- block.text %></pre>
                <% break; %>
                <% case 'map': %>
                    <iframe src="https://www.google.com/maps/embed?pb=<%= block?.url %>"
                        allowfullscreen="true" loading="lazy" class="map"
                        referrerpolicy="no-referrer-when-downgrade"
                        data-size="<%= block?.size %>">
                    </iframe>
                <% break; %>
                <% case 'code': %>
                    <pre>
                        <code
                            <% if (block?.language) { %> class="language-<%= block.language %><% } %>"
                            ><%- block.text %></code>
                    </pre>
                <% break; %>
            <% } %>
        <% }); %>
    <% } %>
</article>
