<div class="card" style="width: 18rem;">
    <% if (typeof image !== 'undefined') {%>
        <div class="card-img-top">
            <a href="<%= url %>"">
                <img src="<%= images.host %>/<%= image %>?width=320" alt="<%= title %>" />
            </a>
        </div>
    <% } %>
    <div class="card-body">
        <h5 class="card-title text-reset">
            <a href="<%= url %>""><%= title %></a>
        </h5>
        <% if (typeof subTitle !== 'undefined') { %>
            <h6 class="card-subtitle m-3 small text-muted">
                <% if (typeof subTitle === "object") {%>
                    <a href="<%= subTitle.url %>"><%= subTitle.text %></a>
                <% } else { %>
                    <%= subTitle %>
                <% } %>
            </h6>
        <% } %>
        <p class="card-text"><%= text %></p>
        <% if (typeof button !=='undefined' ) { %>
            <a href="<%= button.url %>" class="btn btn-primary">
                <%= button.text %>
            </a>
        <% } %>
    </div>
</div>
